<% content_for :title do %>
  <%= t("coronavirus_form.questions.people_to_talk_to.title") %>
<% end %>
<% content_for :meta_tags do %>
  <meta name="description" content="<%= t('coronavirus_form.questions.people_to_talk_to.title') %>" />
<% end %>

<% content_for :back_link do %>
  <%= render "govuk_publishing_components/components/back_link", { href: previous_path } %>
<% end %>

<%= form_tag({},
  "data-module": "track-coronavirus-form-vulnerable-people-to-talk-to",
  "data-question-key": "people_to_talk_to",
  "id": "people_to_talk_to"
) do %>
<%= render "govuk_publishing_components/components/radio", {
  heading: t("coronavirus_form.questions.people_to_talk_to.title"),
  hint: t("coronavirus_form.questions.people_to_talk_to.hint"),
  is_page_heading: true,
  name: "people_to_talk_to",
  error_message: error_items("people_to_talk_to"),
  items: t("coronavirus_form.questions.people_to_talk_to.options").map do |_, item|
    {
      value: item[:label],
      text: item[:label],
      checked: session[:people_to_talk_to] == item[:label],
    }
  end
} %>
<%= render "govuk_publishing_components/components/button", text: "Continue", margin_bottom: true %>
<% end %>
