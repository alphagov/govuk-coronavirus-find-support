<% content_for :meta_tags do %>
  <meta name="description" content="<%= t("copyright_statement.title") %>" />
<% end %>

<% content_for :back_link do %>
  <%= render "govuk_publishing_components/components/back_link", {
    text: t("govwales_breadcrumbs.back_text"),
    href: t("govwales_breadcrumbs.start_again_url"),
    start: true,
  } %>
<% end %>

<main class="cookies-content">
  <div class="container">
    <%= render "govuk_publishing_components/components/title", {
      title: t("copyright_statement.title"),
      margin_top: 0,
    } %>
    <%= sanitize(t('copyright_statement.body_text')) %>
  </div>
</main>
