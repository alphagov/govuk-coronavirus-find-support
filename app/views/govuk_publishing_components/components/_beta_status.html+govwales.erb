    <div class="beta-bar__label"><%= t("govwales_beta_status.status") %></div>
    <p class="beta-bar__type">
      <%= t("govwales_beta_status.type") %>
    </p>
    <p class="beta-bar__description">
      <%= mail_to t("govwales_feedback.email"), t("govwales_feedback.text"), subject: t("govwales_feedback.subject") + t("coronavirus_form.service_title.title"), body: t("govwales_feedback.body") + request.url + "\n" + t("govwales_feedback.body_feedback") %>
