<% content_for :page_header do %>
  <%= render "govuk_publishing_components/components/title", {
    context: t("results.header.context"),
    title: t("results.header.title"),
    inverse: true,
    margin_top: 0,
    margin_bottom: 6,
  } %>
  <%= link_to t("results.header.start_again_text"), clear_session_path, class: "govuk-link" %>
<% end %>

<pre>
<code>
<%= @form_responses %>
</code>
</pre>

<% if no_results?(@form_responses) %>
  <%= render partial: "no_results"  %>
<% else %>
  <% result_groups(@form_responses).each do |group| %>
    <%= render partial: "result_group", locals: { group: group }  %>
  <% end %>
<% end %>

<%= render "components/callout", {
  title: "Help us improve"
} do %>
  <%= link_to t("results.feedback.link_text"), t("results.feedback.link_href"), class: "govuk-link" %>
<% end %>
