<% if flash[:validation]&.any? %>
  <div class="govuk-width-container">
    <%= render "govuk_publishing_components/components/error_summary", {
      title: "There is a problem",
      items: flash[:validation].map { |error| 
        {
          text: error[:text],
          href: "#" + error[:field]
        } 
      }
    } %>
  </div>
<% end %>