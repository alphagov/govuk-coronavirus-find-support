<header id="wg_header" class="wg_header">
  <div class="header" id="header">
    <div class="header__components container">

      <div class="header__components__brand" id="wg_brand">
        <%=
          tag.a href: t('govwales_header.href'), title: t("govwales_header.title"), class: "header__brand", id: "wg_logo" do
            image_tag("govwales/wg_logo.svg", alt: t('govwales_header.title'))
          end
        %>
      </div>

      <div class="header__components__language" id="wg_language">
        <%=
          if locale == :cy
            en_url = start_url(host: Rails.configuration.en_host, locale: "en").sub("/en/", "/")
            link_to("English", en_url, class: "language__link")
          else
            cy_url = start_url(host: Rails.configuration.cy_host, locale: "cy").sub("/cy/", "/")
            link_to("Cymraeg", cy_url, class: "language__link", hreflang: "cy")
          end
        %>
      </div>

    </div>
  </div>
</header>
