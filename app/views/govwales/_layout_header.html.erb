<header id="wg_header" class="wg_header">
  <div class="header" id="header">
    <div class="header__components container">

      <div class="header__components__brand" id="wg_brand">
        <a href="https://gov.wales/" title="Welsh Government" class="header__brand" id="wg_logo">
          <img src="/assets/wg_logo.svg" alt="Welsh Government">
        </a>
      </div>

      <div class="header__components__language" id="wg_language">
        <!-- <a href="https://llyw.cymru/" class="language__link" hreflang="cy">Cymraeg</a> -->
        <% if locale == :en %>
          <%= link_to 'Cymraeg', urgent_medical_help_url(locale: :cy), class: "language__link", hreflang: "cy"  %>
        <% end %>
        <% if locale == :cy %>
          <%= link_to 'English', urgent_medical_help_url(locale: :en), class: "language__link" %>
        <% end %>

      </div>

    </div>
  </div>
</header>
