<footer class="footer" id="footer">
  <div class="footer__backtotop"></div>
  <div class="footer__components container">
    <nav>
      <ul class="footer__menu footer__menu--primary">
        <% t('govwales_footer_primary.links').each do |link| %>
          <%= tag.li link_to link[:text], link[:href] %>
        <% end %>
      </ul>
      <ul class="footer__menu footer__menu--secondary">
        <% t('govwales_footer_secondary.links').each do |link| %>
          <%= tag.li link_to link[:text], link[:href] %>
        <% end %>
      </ul>
    </nav>
  </div>
  <div class="footer__logo container" id="footer_logo">
    <%= tag.a href: t("govwales_footer.logo.href"), class: "footer__logo", id: "footerlogo" do %>
      <%= image_tag "govwales/footer-logo.svg", alt: t("govwales_footer.logo.alt") %>
      <%= tag.span t("govwales_footer.logo.text"), class: "visually-hidden" %>
    <% end %>
  </div>
</footer>
